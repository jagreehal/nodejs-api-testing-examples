{
  "name": "nodejs-api-testing-examples",
  "version": "1.0.0",
  "description": "Examples of how to test node.js APIs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev  --inspect --no-notify --transpile-only --respawn -- src/index.ts",
    "lint": "eslint --ext .js,.ts ./src",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "jest",
    "test:playwright": "npx playwright test src/playwright-test-examples"
  },
  "keywords": [
    "nodejs",
    "api",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.39.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "ioredis-mock": "^8.9.0",
    "get-port": "^7.0.0",
    "jest": "^29.7.0",
    "msw": "^2.0.6",
    "nock": "^13.3.8",
    "prettier": "^3.1.0",
    "start-server-and-test": "^2.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2"
  }
}
