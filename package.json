{
  "name": "nodejs-api-testing-examples",
  "version": "1.0.0",
  "description": "Examples of how to test node.js APIs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev  --inspect --no-notify --transpile-only --respawn -- src/index.ts",
    "lint": "eslint --ext .js,.ts ./src",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "jest",
    "test:playwright": "npx playwright test src/playwright-test-examples"
  },
  "keywords": [
    "nodejs",
    "api",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.44.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unicorn": "^53.0.0",
    "get-port": "^7.1.0",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "msw": "^2.3.0",
    "nock": "^13.5.4",
    "prettier": "^3.2.5",
    "start-server-and-test": "^2.0.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ioredis": "^5.4.1"
  }
}
