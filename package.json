{
  "name": "nodejs-api-testing-examples",
  "version": "1.0.0",
  "description": "Examples of how to test node.js APIs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "dev": "ts-node-dev  --inspect --no-notify --transpile-only --respawn -- src/index.ts",
    "lint": "eslint --ext .js,.ts ./src",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "jest",
    "test:cypress": "start-server-and-test dev http://localhost:5000 cypress:run",
    "test:playwright": "start-server-and-test dev http://localhost:5000 test:playwright:run",
    "test:playwright:run": "npx playwright test src/tests/playwright-examples"
  },
  "keywords": [
    "nodejs",
    "api",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@playwright/test": "^1.35.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "cypress": "^12.15.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "ioredis-mock": "^8.7.0",
    "jest": "^29.5.0",
    "msw": "^1.2.2",
    "nock": "^13.3.1",
    "prettier": "^2.8.8",
    "start-server-and-test": "^2.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2"
  }
}
